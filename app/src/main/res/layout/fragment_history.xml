<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/history_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <android.support.v7.widget.SearchView
        android:id="@+id/search_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:queryHint="@string/search_view_history_hint"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_view_history"
        android:paddingLeft="@dimen/spacing_small_8"
        android:paddingRight="@dimen/spacing_small_8"/>
</RelativeLayout>