<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_with_text_item_height">



        <ImageView
            android:id="@+id/item_image_view"
            style="@style/icon_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_bookmark_grey_24dp"
/>

    <TextView
        android:id="@+id/item_primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_image_view"
        android:layout_marginLeft="@dimen/item_text_left_padding"
        android:layout_marginStart="@dimen/item_text_left_padding"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/item_direction_translation_text"
        android:layout_toStartOf="@+id/item_direction_translation_text"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_seconadary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image_view"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/item_text_left_padding"
        android:layout_marginStart="@dimen/item_text_left_padding"
        android:layout_toLeftOf="@+id/item_direction_translation_text"
        android:layout_toStartOf="@+id/item_direction_translation_text"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_direction_translation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_padding_16_dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>


</RelativeLayout>